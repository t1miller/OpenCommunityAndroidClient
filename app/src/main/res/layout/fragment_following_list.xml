<?xml version="1.0" encoding="utf-8"?>



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list"
            android:name="rr.opencommunity.user.FollowingFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:layoutManager="LinearLayoutManager"
            tools:context=".social.FollowingListFragment"
            tools:listitem="@layout/fragment_following"/>

    <EditText
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Search..."
            android:ems="10"
            android:id="@+id/nameSearching"/>

    <Button
            android:text="Request to follow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/requestToFollow"/>

</LinearLayout>